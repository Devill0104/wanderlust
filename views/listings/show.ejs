<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-0">
 <div class="col-8 offset-3">
    <h3>Listing Details</h3>
    <div class="card col-6 ">
        <img src="<%= listing.image%>" class="card-img-top show-img">
        <div class="card-body">
            <p class="card-text">
            <b><%= listing.title %><br></b>
            <%= listing.description %><br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night<br>
            <%= listing.location %><br>
            <%= listing.country %><br>
            </p>
        </div>
    </div>
 </div> 
 <div class="btns">
    <a href="/listings/<%= listing._id%>/edit" class="btn edit-btn btn-dark offset-3">Edit </a>
    <form action="/listings/<%= listing._id%>?_method=DELETE" method="POST" >
    <button class="c-btn btn btn-dark offset-4">Delete</button>
    </form>
 </div>
</div>
        